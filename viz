ggplot(table, aes(x, y))+
  geom_tile(aes(fill = percent))+
  ggtitle("Left Footer's Heatmap")+
  scale_fill_gradient(name = "Percentage",
                      low = "#FFFFFF",
                      high = "#029645")+
